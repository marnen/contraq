= form_for gig do |f|
  = f.label :name
  = f.text_field :name
  %br

  = f.label :start_time
  = f.datetime_local_field :start_time
  %br

  = f.label :end_time
  = f.datetime_local_field :end_time
  %br

  = f.label :venue
  = f.text_field :venue
  %br

  = f.label :street
  = f.text_field :street
  %br

  = f.label :city
  = f.text_field :city
  %br

  = f.label :state
  = f.text_field :state, size: 2
  %br

  = f.label :zip
  = f.text_field :zip
  %br

  = f.label :amount_due
  = f.number_field :amount_due, value: gig.decorate.amount_due
  %br

  = f.label :terms
  = cell :days_field, f, name: :terms
  %br

  = f.submit 'Save', class: 'save-gig'
