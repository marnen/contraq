%div[@gig]
  %h1.name= @gig.name

  %p= cell :button, @gig, action: :edit

  .basic-info
    .start-time
      %span.field-name= _ 'Start time:'
      = @gig.start_time

    .end-time
      %span.field-name= _ 'End time:'
      = @gig.end_time

    .location
      %span.field-name= _ 'Location:'
      = @gig.location

  .payment
    .amount-due
      %span.field-name= _ 'Amount due:'
      = @gig.amount_due

    .terms
      %span.field-name= _ 'Terms:'
      = @gig.terms
