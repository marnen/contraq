%article[gig]
  %h1.name= link_to gig.name, gig
  .time-range= gig.time_range
  .location= gig.location
  .payment
    - if gig.amount_due
      %span.amount-due
        == #{gig.amount_due}#{',' if gig.terms}
    - if gig.terms
      %span.terms= gig.terms
  .actions= cell :button, gig, action: :edit
