%article[model]
  %h1.name= link_to name, model
  - fields.each do |field|
    %div{class: field.to_s.dasherize}= self.send field
  .actions= cell :button, model, action: :edit

  %h2= _ 'Payments made'
  .payments-made
    = cell :payment, collection: payments
    = link_to _('Report payment'), new_gig_payment_path(model)
